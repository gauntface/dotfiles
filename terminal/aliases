# Did you know that double quotes actually make a difference here?
# Well I found that double quote meant the terminal executed some
# commands on launch

# Easier navigation: .., ..., ~ and -
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ~='cd ~' # `cd` is probably faster to type though

# Shortcuts
alias d='cd ~/Downloads'
alias p='cd ~/Projects'
alias c='cd ~/Projects/Code'
alias t='cd ~/Projects/Tools'

# Start local server
alias server='python3 -m http.server --bind 127.0.0.1'

# Git
alias gr="git fetch origin && git reset @{upstream} --hard --recurse-submodule"
alias gu="git fetch origin && git pull && git submodule update --init --recursive --remote"
alias gp="git add . && git commit -a && git push --recurse-submodules=on-demand"

# Python
alias mkvenv="python -m venv .venv && source .venv/bin/activate"
