# Load direnv
if command -v direnv &> /dev/null
then
    eval "$(direnv hook zsh)"
fi

GITHUB_KEY="${HOME}/.ssh/id_github"
if [[ -f "$GITHUB_KEY" ]];
then
    # Run `ssh-add` to add your key and identity for ForwardAgent to work.
    _=$(ssh-add -L)
    exit_code=$?
    if (( $exit_code != 0 ));
    then
        eval `ssh-agent -s`
        ssh-add "$GITHUB_KEY"
    fi
fi

